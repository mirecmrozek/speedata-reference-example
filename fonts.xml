<?xml version="1.0" encoding="UTF-8"?>
<Include xmlns="urn:speedata.de:2009/publisher/en"
	xmlns:sd="urn:speedata:2009/publisher/functions/en">

  <LoadFontfile name="Crimson-Regular" filename="Crimson-Roman.otf" />
  <LoadFontfile name="Crimson-Bold" filename="Crimson-Bold.otf" />
  <LoadFontfile name="Crimson-Italic" filename="Crimson-Italic.otf" />
  <LoadFontfile name="Crimson-BoldItalic" filename="Crimson-BoldItalic.otf" />

  <DefineFontalias existing="Crimson-Regular" alias="regular"/>
  <DefineFontalias existing="Crimson-Bold" alias="bold"/>
  <DefineFontalias existing="Crimson-Italic" alias="italic"/>
  <DefineFontalias existing="Crimson-BoldItalic" alias="boldItalic"/>

	<DefineFontfamily name="Title" fontsize="12" leading="16">
		<Regular fontface="regular"/>
		<Bold fontface="bold" />
	</DefineFontfamily>

	<DefineFontfamily name="DocumentTitle" fontsize="18" leading="20">
		<Regular fontface="regular"/>
		<Bold fontface="bold" />
	</DefineFontfamily>

	<DefineFontfamily name="text" fontsize="12" leading="13">
		<Regular fontface="regular" />
		<Bold fontface="bold" />
		<Italic fontface="italic" />
		<BoldItalic fontface="boldItalic" />
	</DefineFontfamily>

</Include>
